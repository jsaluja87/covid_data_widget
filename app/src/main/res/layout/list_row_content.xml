<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/default_widget_view_padding"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textSize="@dimen/config_list_view_text_size"
        android:id="@+id/config_list_view_text_id"
        android:padding="@dimen/default_config_view_padding"
        android:layout_toStartOf="@id/config_list_view_check_box_id"
        android:background="?attr/selectableItemBackground"
        >
    </TextView>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/config_list_view_check_box_id"
        android:buttonTint="@color/colorPrimary"
        android:padding="@dimen/default_config_view_padding"
        >

    </CheckBox>

</RelativeLayout>